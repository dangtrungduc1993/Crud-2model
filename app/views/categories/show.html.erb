<p style="color: green"><%= notice %></p>
<div class="container">
  <%= render @category %>

  <div>
    <%= link_to "Edit this category", edit_category_path(@category) %> |
    <%= link_to "Back to categories", categories_path %>

    <%= button_to "Delete", @category, method: :delete, class:"btn btn-danger" %>
  </div>

  <div class="col-md-8">
      <h3>Posts (<%= @category.posts.count %>)</h3>
      <div class="container">
        <div id="posts">
          <% @posts.each do |post| %>
            <% if @category == post.category %>
            <%= render post %>
            <p>
              <%= link_to "Show", post, class:"btn btn-outline-info" %>
            </p>
            <% end %>
          <% end %>
        </div>
      </div>
      
  </div>
</div>

